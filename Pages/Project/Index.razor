@page "/projects"
@using lab6.Data
@using lab6.Services
@inherits OwningComponentBase<ProjectServices>

<h1>All projects</h1>
<a href="/editproject/0" class="btn btn-primary">Add new project</a>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                DateOfStart
            </th>
            <th>
                DateOfEnd
            </th>
            <th>
                Description
            </th>
            <th>

            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var project in projects)
        {
            <tr>
                <td>
                    @project.Id
                </td>
                <td>
                    @project.Name
                </td>
                <td>
                    @project.DateOfStart
                </td>
                <td>
                    @project.DateOfEnd
                </td>
                <td>
                    @project.Description
                </td>
                <td>
                    <a href="/editproject/@project.Id" class="btn btn-warning">Edit project</a>
                </td>
                <td>
                    <a href="/deleteproject/@project.Id" asp-route-id="@project.Id" class="btn btn-danger">Delete project</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@code {
    List<Project> projects = new List<Project>();

	protected override async Task OnInitializedAsync()
	{
		projects = await Service.GetProjects();
	}
}

